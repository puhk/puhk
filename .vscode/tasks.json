{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monitor TS Errors",
      "command": "./node_modules/.bin/tsc",
      "type": "shell",
      "args": [
        "--watch",
        "--project",
        ".",
        "--noEmit",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ],
}
